    <!-- ========================= -->
    <!-- Minuit Control Parameters -->
    <!-- ========================= -->
    <Calc>
        <code function="CalcProlog">
        <![CDATA[
            init_step_size_ = process_tree_.GetEffectiveScale();
        ]]>
        </code>
        <code function="CalcEpilog">
        <![CDATA[
        ]]>
        </code>
    </Calc>
