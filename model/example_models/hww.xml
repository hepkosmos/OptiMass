<?xml version='1.0' encoding='utf-8'?>
<ProcessCard classname="hww" debug="false" version="1.0">
    <!-- ======================== -->
    <!-- Define event decay chain -->
    <!-- ======================== -->
    <DecayChains>
    	<DecayChain>
    		h - w1 w2 , ( w1 - e1 v1 ), ( w2 - e2 v2 )
       	</DecayChain>
    </DecayChains>
    <!-- ================================ -->
    <!-- Target particles to be optimized -->
    <!-- ================================ -->
    <ParticleMassFunction>
        <ParticleGroup mass_function="M2" group_function="max">
	        <Particle label="w1" />
	        <Particle label="w2" />
        </ParticleGroup>
    </ParticleMassFunction>
    <!-- ===================================== -->
    <!-- Map between particle labels and types -->
    <!-- ===================================== -->
    <ParticleLabels>
